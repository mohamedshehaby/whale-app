include ../mixins/_chartCard

+chartCard('Fish Sold')
    div(class="flex flex-col gap-4")
        div(class="flex gap-2")
            div(class="basis-2xs flex flex-col bg-selago gap-4 p-8 rounded-xl shadow text-center")
                h5(class="text-4xl font-bold text-shark") 455 Kg
                p(class="text-base font-medium text-shark") Fish Caught Today
            div(class="w-full")
                div(id="fish-chart")
    div(class="flex gap-4 flex-col mt-6 ")
        each i in [1, 2, 3, 4, 5]
            div(class="flex gap-2 items-center justify-center")
                h6(class="text-trout text-sm font-normal shrink-0") Type of fish
                div(class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700")
                    - var randomWidth = Math.floor(Math.random() * 100) + '%';
                    div(class="bg-blue-600 h-2.5 rounded-full" style=`width: ${randomWidth}`)
                span(class="text-trout text-sm font-normal") #{randomWidth}




